<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"> <!-- Верхняя половина -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"> <!-- Горизонтальный Toolbar -->
                <Spinner
                    android:id="@+id/spiner_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                </Spinner>

                <Button
                    android:id="@+id/excahngeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ExChange">
                </Button>

                <Button
                    android:id="@+id/menuBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawable="@drawable/menu_icon"
                    android:minHeight="50dp"
                    android:layout_gravity="right"
                    android:text="..."/>
            </LinearLayout>
            <EditText
                android:id="@+id/fromText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Original Text"
                android:imeOptions="actionDone"/>
        </LinearLayout>
        <Button
            android:id="@+id/OkBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="OK"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"> <!-- Нижняя -->
            <Spinner
                android:id="@+id/spiner_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">
            </Spinner>

            <EditText
                android:id="@+id/toText"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:hint="Enjoy of Translate"
                android:minHeight="100dp"
                android:maxHeight="200dp"
                android:imeOptions="actionDone"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>